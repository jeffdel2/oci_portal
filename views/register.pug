extends layout

block content
  h2= "Acme Registration"
  br
  div.col-xs-6
    p Fill out the following to register for access to Acme
    
    label(for="name") Name:
    input(type="text", name="name", id="name")

    br

    label(for="email") Email:
    input(type="email", name="email", id="email")

    br

    label(for="age") Age:
    input(type="number", name="age", id="age")

    br

    input(type="submit", value="Submit")