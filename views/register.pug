extends layout

block content
  h2= "Acme Registration"
  br
  br
  div.col-xs-6
    p Fill out the following to register for access to Acme
    
    form(method="post", action="/submit")
    
      input.input-custom(type="text", name="firstname", id="firstname", placeholder="First Name", value="Default Value")

      br
      br
    
      label(for="lastname") Last Name:
      input.input-custom(type="text", name="lastname", id="lastname")

      br
      br

      label(for="email") Email:
      input.input-custom(type="email", name="email", id="email")

      br
      br
      
      button.btn.btn-primary(type='submit', value="Submit") Click here to Register
      