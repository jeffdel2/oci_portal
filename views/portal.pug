extends layout

block content

  div.hero
    div.hero-content
      h1.hero-title= "Healthcare Portal"
      p.hero-subtitle= "Access your healthcare tools and patient management features."
      
      div.portal
        // Display admin-specific tiles
        if isAdmin
          a.tile.admin(href="/admin-panel")
            div.tile-icon
              i.fa.fa-user-md
            h3 Healthcare Admin
            p Manage users, settings, and system permissions.
          a.tile.admin(href="/reports")
            div.tile-icon
              i.fa.fa-chart-line
            h3 Analytics & Reports
            p View healthcare metrics and system reports.
          a.tile.admin(href="/profile")
            div.tile-icon
              i.fa.fa-cog
            h3 System Settings
            p Update account and system configuration.

        // Display user-specific tiles
        if isUser
          a.tile.user(href="/profile")
            div.tile-icon
              i.fa.fa-user-injured
            h3 Patient Records
            p Access and manage patient information.
          a.tile.user(href="/dealer-app")
            div.tile-icon
              i.fa.fa-stethoscope
            h3 Medical Dashboard
            p Access patient care and treatment tools.
          a.tile.user(href="/")
            div.tile-icon
              i.fa.fa-headset
            h3 Healthcare Support
            p Get help or contact medical support.

        // General tiles for all roles
        a.tile.general(href="/")
          div.tile-icon
            i.fa.fa-bullhorn
          h3 Healthcare Updates
          p Stay updated with medical news and announcements.